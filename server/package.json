    "@types/ws": "^8.5.13",
    "@types/pg": "^8.11.10",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "drizzle-kit": "^0.30.4",
    "ts-node": "^10.9.2",
